{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{> site-nav}}

{{#author}}
    {{> header background=cover_image}} {{!--Special header.hbs partial to generate the <header> tag--}}
        <div class="container">
            <div class="section-header-content">
                {{#if profile_image}}
                    <img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" />
                {{/if}}
                <h1 class="title is-size-1">{{name}}</h1>
                {{#if bio}}
                    <h2 class="subtitle">{{bio}}</h2>
                {{/if}}
            </div>
        </div>
    </header>
{{/author}}

{{!-- The main content area --}}
<main id="site-main" class="section section-feed">
    <div class="container">
        <div class="container-feed post-feed">
            {{#foreach posts}}
                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-card"}}
            {{/foreach}}
        </div>
    </div>
</main>
