{{!< default}}
{{> "site-nav"}}

{{> header background=@blog.cover_image}} {{!--Special header.hbs partial to generate the <header> tag--}}
    <div class="container">
        <div class="section-header-content">
            <h1 class="title is-size-1">{{@blog.title}}</h1>
            <h2 class="subtitle">{{@blog.description}}</h2>
        </div>
    </div>
</header>

{{!-- The main content area --}}
<main id="site-main" class="section section-feed">
    <div class="container">
        <!-- .post-feed required for infinite scroll -->
        <div class="container-feed post-feed">
            {{#foreach posts}}
                {{> "post-card"}}
            {{/foreach}}
        </div>
    </div>
</main>
